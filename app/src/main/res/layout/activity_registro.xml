<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context=".RegistroActivity">

    <FrameLayout
        android:id="@+id/frameEncabezado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="?android:attr/colorPressedHighlight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imvLogo"
            android:layout_width="231dp"
            android:layout_height="78dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/tuparqueologo" />
    </FrameLayout>

    <TextView
        android:id="@+id/txtRegVehiculo"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/txvRegVehiculo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.172" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="374dp"
        android:layout_height="62dp"
        android:background="@android:color/holo_orange_dark"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRegVehiculo"
        app:layout_constraintVertical_bias="0.022">

        <Button
            android:id="@+id/btnMoto"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            app:cornerRadius="15dp"
            app:icon="@drawable/moto"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btnAutomovil"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            app:cornerRadius="15dp"
            app:icon="@drawable/automovil"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btnCamioneta"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            app:cornerRadius="15dp"
            app:icon="@drawable/camioneta"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btnCamion"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            app:cornerRadius="15dp"
            app:icon="@drawable/camion"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btnTractoCamion"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            app:cornerRadius="15dp"
            app:icon="@drawable/tractocamion"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <EditText
        android:id="@+id/edtxPlaca"
        android:layout_width="226dp"
        android:layout_height="53dp"
        android:background="@color/design_default_color_background"
        android:ems="10"
        android:hint="@string/edtxPlaca"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.404" />

    <Spinner
        android:id="@+id/spZona"
        android:layout_width="156dp"
        android:layout_height="48dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/spPlan"
        app:layout_constraintEnd_toStartOf="@+id/txvCapacidad"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxPlaca" />

    <TextView
        android:id="@+id/txvCapacidad"
        android:layout_width="111dp"
        android:layout_height="44dp"
        android:layout_marginEnd="52dp"
        android:background="@color/white"
        android:hint="capacidad"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/spPlan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxPlaca" />

    <Spinner
        android:id="@+id/spPlan"
        android:layout_width="225dp"
        android:layout_height="45dp"
        android:background="@color/design_default_color_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.591"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxPlaca"
        app:layout_constraintVertical_bias="0.317" />

    <EditText
        android:id="@+id/edtxHoraIngreso"
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:background="@color/design_default_color_background"
        android:ems="10"
        android:hint="Hora"
        android:inputType="time"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.881"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.739" />

    <Button
        android:id="@+id/btnNuevoRegistro"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:text="Registrar"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.849" />

    <Button
        android:id="@+id/btnConsulReg"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:text="@string/btnConsultar"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />

    <EditText
        android:id="@+id/edtxFechaIngreso"
        android:layout_width="117dp"
        android:layout_height="42dp"
        android:background="@color/design_default_color_background"
        android:ems="10"
        android:hint="Fecha"
        android:inputType="date"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74" />

    <Button
        android:id="@+id/btnCanceRegistro"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:text="Cancelar"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.849" />

    <Button
        android:id="@+id/btnEditReg"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:text="Cancelar"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />

    <TextView
        android:id="@+id/txtTVehiculo"
        android:layout_width="80dp"
        android:layout_height="27dp"
        android:background="@color/design_default_color_background"
        app:layout_constraintBottom_toTopOf="@+id/spZona"
        app:layout_constraintEnd_toStartOf="@+id/edtxPlaca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />


</androidx.constraintlayout.widget.ConstraintLayout>